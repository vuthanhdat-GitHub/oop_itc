#include <iostream.h>
#include <string.h>

void nhap(int a[], int &n){
	cout<<"\nNhap vao so phan tu mang: ";
	cin >> n;
	for(int i = 0; i < n; i++){
		cout<<"a["<<i<<"] = ";
		cin >> a[i];
	}
}
void xuat(int a[], int &n){
	for(int i = 0; i <n; i++){
		cout<<"a["<<i<<"] = "<<a[i]<<endl;
	}
}
	
void BubbleSort(int a[], int n){
	int i, j;
	for(i = 1; i < n; i++){
		for(j = n; j > i; j--){
			if (a[j] < a[j-1])
			Swap(a[j], a[j-1]);				
		}
	}
}
int main(int argc, char *argv[])
{
	int n;
	int a[100];
	nhap(a, n);
	cout<<"\nSap xep BubbleSort: ";
	BubbleSort(a, n);
	return 0;
}